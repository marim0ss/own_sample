<p id="notice"><%= notice %></p> <!-- フラッシュ-->

<h1>日記の一覧画面</h1>

<table>
  <thead>   <!-- -表の見出し部分 -->
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>登録日時</th>
      <th>更新日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>   <!-- 表の内容 -->
    <% @diaries.each do |diary| %>
      <tr>   <!-- trタグでひとまとまりのレコードを表す -->
        <td><%= diary.id %></td>
        <!-- ↓ titleがshowへのリンク diaryは diary_path(diary.id)の省略形 -->
        <td><%= link_to diary.title, diary %></td>
        <td><%= diary.created_at %></td>
        <td><%= diary.updated_at %></td>


        <!-- 非表示 -->
        <!-- <td><%= link_to 'Show', diary %></td>   -->
        <!-- <td><%= link_to 'Edit', edit_diary_path(diary) %></td>  (diary)は diary.idの省略形 -->

      </tr>
    <% end %>
  </tbody>
</table>

<br>

